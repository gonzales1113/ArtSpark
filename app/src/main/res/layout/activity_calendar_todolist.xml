<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirtwhite"
    tools:context=".CalendarTodolist">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@id/bottomBar"
        android:background="@drawable/shadow"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:background="@color/dirtwhite"
        app:compatShadowEnabled="true"
        android:padding="10sp"
        >

        <ImageButton
            android:id="@+id/artSparkBurgerIcon"
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:srcCompat="@drawable/artspark_burger_icon"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

        <ImageButton
            android:id="@+id/artSparkMoodBoardIcon"
            android:layout_width="62sp"
            android:layout_height="62sp"
            app:srcCompat="@drawable/artspark_moodboard_icon"
            android:layout_marginStart="110sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"


            />

        <ImageButton
            android:id="@+id/artSparkCalendarIcon"
            android:layout_width="60sp"
            android:layout_height="62sp"
            app:srcCompat="@drawable/artspark_calendar_icon"
            android:layout_marginStart="220sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

        <ImageButton
            android:id="@+id/artSparkYouIcon"
            android:layout_width="63sp"
            android:layout_height="64sp"
            app:srcCompat="@drawable/artspark_you_icon"
            android:layout_marginStart="330sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

    </com.google.android.material.bottomnavigation.BottomNavigationView>



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="320sp"
        android:background="@drawable/artspark_calendar"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:id="@+id/toDo"
        android:layout_below="@id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="5sp"
        android:padding="20sp"
        android:text="@string/task"
        android:fontFamily="@font/concert_one"
        android:textSize="15sp"
        android:background="@drawable/to_do"
        android:clickable="true"

        />

    <TextView
        android:id="@+id/toDoSoon"
        android:layout_below="@id/toDo"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="5sp"
        android:padding="20sp"
        android:text="@string/task"
        android:fontFamily="@font/concert_one"
        android:textSize="15sp"
        android:background="@drawable/to_do_soon"
        android:clickable="true"

        />

</RelativeLayout>