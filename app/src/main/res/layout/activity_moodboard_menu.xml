<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirtwhite"
    tools:context=".MoodboardMenu">

    <View
        android:id="@+id/upperNavBar"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/yellow"
        >
    </View>

    <GridView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upperNavBar"
        android:layout_marginTop="-1dp"
        android:columnWidth="65dp"
        android:gravity="center"
        android:horizontalSpacing="6dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/icon"
        />

    <TextView
        android:id="@+id/boards"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="@string/boardsnavbartitle"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/concert_one"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textColor="@color/dirtwhite"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="100sp"
        android:contentDescription="@string/icon"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@id/bottomBar"
        android:background="@drawable/shadow"/> <!--shadow-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:background="@color/dirtwhite"
        app:compatShadowEnabled="true"
        android:padding="10sp"
        android:layout_below="@id/toDo"

        >

        <ImageButton
            android:id="@+id/artSparkBurgerIcon"
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:srcCompat="@drawable/artspark_burger_icon"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

        <ImageButton
            android:id="@+id/artSparkMoodBoardIcon"
            android:layout_width="62sp"
            android:layout_height="62sp"
            app:srcCompat="@drawable/artspark_moodboard_icon"
            android:layout_marginStart="110sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"


            />

        <ImageButton
            android:id="@+id/artSparkCalendarIcon"
            android:layout_width="60sp"
            android:layout_height="62sp"
            app:srcCompat="@drawable/artspark_calendar_icon"
            android:layout_marginStart="220sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

        <ImageButton
            android:id="@+id/artSparkYouIcon"
            android:layout_width="63sp"
            android:layout_height="64sp"
            app:srcCompat="@drawable/artspark_you_icon"
            android:layout_marginStart="330sp"
            android:contentDescription="@string/icon"
            android:background="@android:color/transparent"
            android:clickable="true"

            />

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>